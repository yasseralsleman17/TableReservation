<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".RegisterRestaurant">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/restaurant" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Restaurant Registration"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold|italic" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/reg_res_full_name"
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#ECECEC"
            android:hint="  Full Name" />



        <EditText
            android:id="@+id/reg_res_number"
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#ECECEC"
            android:hint="  Contact  Number"
            android:maxLength="10"
            android:inputType="number" />


        <EditText
            android:id="@+id/reg_res_user_name"
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#ECECEC"
            android:hint="  Email" />

        <EditText
            android:id="@+id/reg_res_password"
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#ECECEC"
            android:hint="  Password" />

        <EditText
            android:id="@+id/reg_res_confirm_pass"
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#ECECEC"
            android:hint="  Confirm Password" />

        <LinearLayout
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:background="#ECECEC"
                android:gravity="center"
                android:textSize="20dp"
                android:text="  Address : " />


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

        </LinearLayout>
        <Button

            android:id="@+id/reg_res_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:backgroundTint="@color/Button_color"
            android:bottomLeftRadius="@dimen/_10sdp"
            android:bottomRightRadius="@dimen/_10sdp"
            android:text="registr as Restaurant"
            android:topLeftRadius="@dimen/_10sdp"
            android:topRightRadius="@dimen/_10sdp" />


    </LinearLayout>

</LinearLayout>
    </ScrollView>


</LinearLayout>